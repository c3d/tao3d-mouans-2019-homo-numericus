portraits_position -> page_time
portraits_count -> 1.0
portraits_depth -> 2800
portraits N:integer, Head, Tail ->
    portraits N, Head
    portraits N+1, Tail
portraits N:integer, Head ->
    locally
        texture Head & ".jpg"
        translate_z -portraits_depth
        rotate_y 360.0/portraits_count * N - 5 * portraits_position
        translate_z portraits_depth
        translate_y 320 + 100 * sin(23.5 * N)
        circle 0, 0, 300
